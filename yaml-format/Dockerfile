# Pull Base Image
FROM mikefarah/yq:4

RUN apk add --no-cache bash=5.1.0-r0

COPY formatYaml.sh /bin/formatYaml.sh
RUN chmod +x /bin/formatYaml.sh

WORKDIR /src

ENTRYPOINT ["formatYaml.sh"]
