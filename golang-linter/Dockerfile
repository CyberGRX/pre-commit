# ---------------------
# ---------------------
# builder container
# ---------------------
# ---------------------

FROM golang:latest

ARG VERSION

COPY golang-lint.sh bin/golang-lint.sh
RUN chmod +x bin/golang-lint.sh && \
    echo "${VERSION}" > golang-linter.version

ENTRYPOINT ["golang-lint.sh"]
